#!/usr/bin/env bash

cp -r /var/vcap/src /home/vcap/app
chown -R vcap:vcap /home/vcap/app

mkdir -p /app
chown vcap:vcap /app
su - vcap -c /var/vcap/dockery/bin/tasks/staging

echo "ARGS: $#"
echo "ARGS: $*"

rm -Rf /app
ln -s /home/vcap/app /app
sudo -u vcap sh -s << EOF
  /var/vcap/dockery/bin/tasks/runner $*
EOF
