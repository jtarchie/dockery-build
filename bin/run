#!/usr/bin/env bash

cp -r /var/vcap/src /home/vcap/app
chown -R vcap:vcap /home/vcap/app

mkdir -p /app
chown vcap:vcap /app
sudo -u vcap bash -i -c "export CF_STACK=$CF_STACK; /var/vcap/dockery/bin/tasks/staging"

rm -Rf /app
ln -s /home/vcap/app /app
sudo -u vcap bash -i -c "/var/vcap/dockery/bin/tasks/runner $*"
